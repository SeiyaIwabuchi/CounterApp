<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textDefautNum"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/textCountNum"/>
    <Button
            android:text="@string/textbtnText"
            android:layout_width="380dp"
            android:layout_height="216dp"
            android:id="@+id/btnCount" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp" android:layout_marginTop="124dp"
            app:layout_constraintTop_toBottomOf="@+id/textCountNum"/>
    <Button
            android:text="@string/textReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnReset" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="307dp"
            android:layout_marginStart="307dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="88dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>